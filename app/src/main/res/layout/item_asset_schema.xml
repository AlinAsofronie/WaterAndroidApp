<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/apple_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/apple_separator"
    app:strokeWidth="0.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Primary Identifier -->
        <TextView
            android:id="@+id/primary_identifier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/status_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="LAPTOP-001" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_background"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ACTIVE" />

        <!-- Asset Type -->
        <TextView
            android:id="@+id/asset_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/apple_gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/primary_identifier"
            tools:text="Laptop" />

        <!-- Location Info Container -->
        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/asset_type">

            <!-- Location Icon -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="@color/apple_gray" />

            <!-- Wing and Room -->
            <TextView
                android:id="@+id/location_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/apple_gray_dark"
                android:textSize="14sp"
                tools:text="North Wing • Room NW-101" />

        </LinearLayout>

        <!-- Asset Details Row 1 -->
        <LinearLayout
            android:id="@+id/details_row_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_container">

            <!-- Asset Barcode -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Barcode"
                    android:textColor="@color/apple_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/asset_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="BC001" />

            </LinearLayout>

            <!-- Secondary Identifier -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Secondary ID"
                    android:textColor="@color/apple_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/secondary_identifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="DEV-LAP-01" />

            </LinearLayout>

        </LinearLayout>

        <!-- Filter Information Row -->
        <LinearLayout
            android:id="@+id/filter_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_row_1">

            <!-- Filter Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Filter Type"
                    android:textColor="@color/apple_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/filter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="HEPA" />

            </LinearLayout>

            <!-- Filter Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Filter Status"
                    android:textColor="@color/apple_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/filter_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:text="Active" />

            </LinearLayout>

        </LinearLayout>

        <!-- Maintenance Flags Row -->
        <LinearLayout
            android:id="@+id/maintenance_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_row">

            <!-- Augmented Care Badge -->
            <TextView
                android:id="@+id/augmented_care_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/status_background"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="AUGMENTED CARE"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Low Usage Badge -->
            <TextView
                android:id="@+id/low_usage_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/status_background"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="LOW USAGE"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Needs Flushing Badge -->
            <TextView
                android:id="@+id/needs_flushing_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_background"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="NEEDS FLUSHING"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/apple_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/maintenance_row" />

        <!-- Action Row -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator">

            <!-- Sync Status -->
            <TextView
                android:id="@+id/sync_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textColor="@color/apple_gray"
                android:textSize="12sp"
                tools:text="• Synced" />

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_edit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="Edit"
                android:textColor="@color/apple_blue"
                android:textSize="16sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>